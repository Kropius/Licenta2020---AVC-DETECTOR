<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear"
    tools:context=".ui.home.home">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:orientation="vertical"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shapestarttest"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="4dp"



            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/brainus"
                android:layout_weight="1">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/carter_one"
                android:text="@string/startTest"
                android:textAlignment="center"
                android:textColor="#0202AA"
                android:textSize="36sp"
                android:textStyle="bold"
                android:padding="1dp">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shapesymptoms"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"


            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/dizziness"
                android:layout_weight="1">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/carter_one"
                android:text="@string/symptoms"
                android:textAlignment="center"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="35sp"
                android:textStyle="bold"
                android:padding="1dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shapemap"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"


            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/map"
                android:layout_weight="1">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/carter_one"
                android:text="@string/map"
                android:textAlignment="center"
                android:textColor="#ff0066"
                android:textSize="36sp"
                android:textStyle="bold"
                android:padding="1dp">

            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@drawable/shapelogout"
            android:paddingBottom="5dp"
            android:paddingTop="10dp"
            android:paddingRight="5dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"


            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/logout"
                android:layout_weight="1">

            </ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/carter_one"
                android:text="@string/logout"
                android:textAlignment="center"
                android:textColor="#ffff4d"
                android:textSize="36sp"
                android:textStyle="bold"
                android:padding="1dp">

            </TextView>
        </LinearLayout>



    </LinearLayout>
</RelativeLayout>
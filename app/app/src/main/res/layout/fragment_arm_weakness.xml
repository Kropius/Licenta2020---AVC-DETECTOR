<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.symptoms.ArmWeakness">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#ffaaa5"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="138dp"
                android:layout_height="141dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/weakness" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/carter_one"
                    android:text="@string/weakness_title"
                    android:textColor="#fcf8f3"
                    android:textSize="35sp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"

                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/carter_one"
                    android:text="@string/weakness_explanantion"
                    android:textAlignment="center"
                    android:textColor="#fcf8f3">

                </TextView>
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#698474"
            android:layout_weight="1">

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:text="@string/clinical_weakness_title"
                android:textSize="26sp"
                android:textColor="#fcf8f3"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:text="@string/clinical_weakness_explanantion"
                android:textSize="14sp"
                android:textColor="#fcf8f3"
                android:layout_marginBottom="10dp"
                android:textAlignment="center"
                />

            <TextView
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/carter_one"
                android:text="@string/clinical_weakness_signs_first"
                android:textSize="14sp"
                android:textColor="#fcf8f3"
                android:textAlignment="center">

            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#fcf8f3"
                android:layout_marginTop="10dp"
                android:layout_weight="1">

                <TextView
                    android:layout_marginStart="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/carter_one"
                    android:text="@string/perceived_weakness_title"
                    android:textSize="23sp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:layout_marginEnd="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#fcf8f3"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/carter_one"
                            android:layout_margin="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/perceived_weakness_explanantion"
                            />
                        <TextView
                            android:layout_marginStart="10dp"
                            android:fontFamily="@font/carter_one"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/perceived_weakness_signs_first"
                            />

                    </LinearLayout>

                    <ImageView
                        android:layout_width="150dp"

                        android:layout_height="153dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:src="@drawable/strength" />
                </LinearLayout>
                <TextView

                    android:layout_marginStart="10dp"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/carter_one"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Daca poti, esti bine!"
                    android:textAlignment="center"
                    android:layout_marginEnd="10dp"
                    android:textSize="24sp"
                    />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>
</FrameLayout>